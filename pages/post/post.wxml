    bind:click-input="typeDisplay"
    bind:focus="typeDisplay"
  >
   </van-field> -->
<van-dropdown-menu>
  <van-dropdown-item  value="{{type}}" options="{{ types }}" />
</van-dropdown-menu>

<!-- description -->
<van-field
    value="{{ description }}"
    placeholder="Description"
    border="{{ false }}"
    type="textarea"
    autosize
    input-class="searchitemdes"
    focus="{{inputShowed}}" 
    input-align="center"
  />
  <van-field
    value="{{ imageURL }}"
    placeholder="图片选择"
    border="{{ false }}"
    input-class="searchitem"
    focus="{{inputShowed}}" 
    input-align="center"
    bind:change="imageChoose"
    bind:click-input="imageChoose"
    bind:focus="imageChoose"
  />
<van-field
    value="{{ contact }}"
    placeholder="Contact:微信或小红书"
    border="{{ false }}"
    input-class="searchitem"
    focus="{{inputShowed}}" 
    input-align="center"
  />

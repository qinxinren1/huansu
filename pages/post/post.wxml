<view>
  <van-divider hairline customStyle="color: #7232dd; border-color: #7232dd;"/>
  <van-cell-group>
    <!-- <input type="text" class="searchitem" placeholder="搜索"  value="{{inputVal}}" focus="{{inputShowed}}" bindinput="inputTyping" /> -->
  <van-field
    value="{{ inputVal }}"
    placeholder="Where"
    border="{{ false }}"
    input-class="searchitem"
    focus="{{inputShowed}}" 
    bindinput="inputTyping"
    bind:confirm="toConfirm"
    input-align="center"
  />

  <!-- 自动补全 -->
  <view class="weui-cells searchbar-result" wx:if="{{inputVal.length > 0 && listShowed==true}}">
  <view class="weui-cell__bd" wx:for="{{list}}" bindtap='onClickList' wx:key="key">
    <view class='list_name'  bindtap='onClickList'></view>
      <label class='lab_name' bindtap='onClickList'>{{item}}</label>
      </view>
    </view>
<!-- date -->
<van-field
    value="{{ date }}"
    placeholder="When"
    border="{{ false }}"
    input-class="searchitem"
    focus="{{inputShowed}}" 
    input-align="center"
    bind:change="dateDisplay"
    bind:click-input="dateDisplay"
    bind:focus="dateDisplay"
  />
  <date isShow="{{dateShowed}}" timeStart="{{start_time}}" minDate="2019/1/1" timeEnd="{{end_time}}" theme_color="#2493F8"
  bind:tapYes="onDateConfirm" bind:tapNo="onDateClose"/>

<van-field
    value="{{ number }}"
    placeholder="Capacity"
    type="number"
    border="{{ false }}"
    input-class="searchitem"
    focus="{{inputShowed}}" 
    input-align="center"
    bind:change="onNumberChange"
  />


<!-- type -->

<view class="container">
  <view>
    <van-row class="row-display">
    <van-col offset="1" span="18">
    <van-button bind:click="onClickSearch" icon="/icons/loupe.png" size="large" round color='#7232dd' plain>搜索</van-button> 
    </van-col>
    <van-col offset="1" span="3">
    <van-button icon="/icons/filter.png" round size="large" color='#7232dd' plain></van-button>
    </van-col>
    </van-row>
    <van-row class="row-display">
    <!-- <van-cell value="" size="small"/> -->
    <van-col offset="1" span="3">
      <van-button round size="large" color='#7232dd' plain>
    <van-icon name = "/icons/entertainment.png" size = "40px" ></van-icon></van-button>
    </van-col>
    <van-col offset="1" span="3">
    <van-button round size="large" color='#7232dd' plain>
    <van-icon name = "/icons/physical-activity.png" size = "40px" ></van-icon>
    </van-button>
    </van-col>
    <van-col offset="1" span="3">
    <van-button round size="large" color='#7232dd' plain>
    <van-icon name="/icons/sport.png" size="40px"></van-icon></van-button>
    </van-col>
  </van-row>
  </view>
  
    <scroll-view scroll-y="true" class="list" scroll-y="{{true}}">
        <!-- <view class="item" wx:for="{{list}}">第{{index+1}}个{{item}} </view> -->
        <view wx:for="{{searchRes}}">
        <van-image
          width="390"
          height="280"
          fit="widthFix"
          lazy-load
          src="{{item.picPath}}"
          bind:touchstart="onClickHouse"
        />
        <van-cell-group inset>
        <van-row>
        <van-col span="12">
          <van-cell title="{{item.location}}" label="{{item.location}}" border="{{ false }}" /></van-col>
        <van-col span="12">
          <van-cell title="{{item.start_date}} to {{item.end_date}}" label="Feb, March" border="{{ false }}" /></van-col>
        </van-row>
</van-cell-group>

      </view>
    </scroll-view>

  <van-tabbar active="{{ active }}" bind:change="onChange">
  <van-tabbar-item icon="home-o" bind:click="onGoHome">Home</van-tabbar-item>
  <van-tabbar-item icon="search" size="100px" bind:click="onGoPost">Post</van-tabbar-item>
  <van-tabbar-item icon="friends-o" bind:click="onGoProfile">Profile</van-tabbar-item>
</van-tabbar>
</view>


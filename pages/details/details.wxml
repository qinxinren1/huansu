<view>
  <view>
    <van-image
      height="280"
      width="100%"
      src="{{detailInfo.picPath}}"
    />
  </view>
  <van-cell-group border="{{ false }}">
    <van-cell
      custom-class="goods-message"
      title="{{ detailInfo.location }}"
      label="{{ detailInfo._id}}"
    />
    <van-cell custom-class="capacityInfo">
      <van-col span="18">{{ detailInfo.capacity }} guests </van-col>
    </van-cell>
  </van-cell-group>
  <van-cell class="van-multi-ellipsis--l2" title = "Details" label = "{{detailInfo.description}}">
  </van-cell>
  <van-cell-group custom-class="goods-cell-group">
    <van-cell value="{{detailInfo.start_date}} - {{detailInfo.end_date}}" icon="shop-o"  bind:click="sorry">
      <view slot="title">
        <span class="van-cell-text">Time Avalibility</span>
      </view>
    </van-cell>
    <van-cell title="Owner Contact" value="{{detailInfo.contact}}" icon="location-o"  bind:click="sorry" />
    
  </van-cell-group>

  <van-goods-action>
    <van-goods-action-icon
      icon="chat-o"
      text="我的"
      bind:click="onClickUser"
    />
    <van-goods-action-icon
      icon="cart-o"
      text="Wishes"
      bind:click="onClickCart"
    />
    <van-goods-action-button
      text="Contect"
      bind:click="onClickButton"
    />
</van-goods-action>

<van-tabbar active="{{ active }}" bind:change="onChange">
  <van-tabbar-item icon="home-o" bind:click="onGoHome">Home</van-tabbar-item>
  <van-tabbar-item icon="search" size="100px" bind:click="onGoPost">Post</van-tabbar-item>
  <van-tabbar-item icon="friends-o" bind:click="onGoProfile">Profile</van-tabbar-item>
</van-tabbar>
</view>
/* components/swiper/index.wxss */
page {
  background-color: #fff;
}

.swiper-block {
  height: 470rpx;
  width: 100%;
  position: relative;
  z-index: 1;
}

.swiper-item {
  overflow: visible;
  /* overflow: unset;
  overflow:inherit; */
  padding-top: 70rpx;
  padding-bottom: 20rpx;
  box-sizing: border-box;
}

.slide-image {
  height: 300rpx;
  width: 450rpx;
  border-radius: 10rpx;
  margin: 0rpx 50rpx;
  z-index: 1;
  box-shadow: 10rpx 5px 40rpx rgba(0, 0, 0, 0.5);
}

.active {
  transform: scale(1.3);
  transition: all .5s ease-in 0s;
  z-index: 20;
  opacity: 1;
}

.default {
  transform: scale(1);
  transition: all .5s ease-in 0s;
  z-index: 0;
  opacity: 0.4;
}

.dots-box {
  display: flex;
  justify-content: center;
  align-items: center;
}

.dots {
  width: 30rpx;
  height: 6rpx;
  border-radius: 3rpx;
  margin: 0 4rpx;
  background-color: #aaa;
}

.dots-active {
  background-color: rgb(214, 163, 163);
}

/* 背景图片 */
.bg-img {
  height: 470rpx;
  width: 100%;
  position: absolute;
  left: 0;
  top: 0;
  filter: blur(100rpx) brightness(1.3);
  -webkit-filter: blur(100rpx) brightness(1.3);
  transform: scale(1.6) translateZ(0);
  -webkit-transform: scale(1.6) translateZ(0);
  /* 注意： transform：translateZ(0) 解决ios上面filter不生效 */
  z-index: -1;
}